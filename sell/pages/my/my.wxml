<view class="container my-container" hidden="{{loadingHidden}}">
    <view class="my-header">
        <image src="http://cs.cms.joyfamliy.com:2017/Data/UploadFiles/literature/product-draw@8.jpg"></image>
        <text class="name">仧衤鉡の謌</text>
    </view>
    <!--地址管理-->
    <view class="my-address">
        <view class="item-title" ontap="editAddress">
            地址管理
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title item-title-border-none" bindtap="onMyOrderTap">
            我的订单
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
    </view>

    <view class="my-order">
        <view class="item-title" bindtap="onMakePhoneCall">
            客服电话
            <text class="tel">010-53511030</text>
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
        <view class="item-title" bindtap="onShowModal">
            关于我们
            <image src="../../images/icon/arrow@right.png"></image>
        </view>
    </view>
</view>
