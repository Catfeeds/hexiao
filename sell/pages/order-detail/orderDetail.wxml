<!--订单详情-->
<view class="container order-container">
    <!--地址-->
    <view class="order-address-info" bindtap="editAddress">
		<view class="contact-box">
			<image class="icon" src="/images/icon/ico_zuobiao.png"></image>
			<view class="box">
				<text class="box-name">{{address.name}}</text>
				<text class="box-tel">{{address.mobile}}</text>
				<view class="box-detail">{{address.province}}{{address.city}}{{address.country}}{{address.detail}}</view>
			</view>
		</view>
    </view>

    <!--商品展示-->
    <view class="product-item">
        <image class="item-left" src="{{item.main_img_url}}" mode="aspectFill"></image>
        <view class="item-middle">
            <view class="item-title">{{item.name}} {{item.describe}}</view>
            <view class="item-price">￥{{item.price}}</view>
        </view>
    </view>

    <!-- 属性选择 -->
    <view class="attribute">
        <view class="attribute-wrapper">

            <view class="attribute-item">
				<view class="picker-view">
					<view class="pick-left">数量</view>
					<view class="pick-middle">x{{orderInfo.total_count}}</view>
				</view>
            </view>

            <view class="attribute-item" wx:if="{{orderInfo.feature}}">
				<view class="picker-view">
					<text class="pick-left">规格</text>
					<text class="pick-middle">{{orderInfo.feature}}</text>
				</view>
            </view>
            <view class="attribute-item">
				<view class="picker-view">
					<view class="pick-left">配送方式</view>
					<view class="pick-middle">{{orderInfo.express}}</view>
				</view>
            </view>
			<view class="attribute-item" hidden="{{orderInfo.express=='门店自提'}}">
                <view class="picker-view">
                    <view class="pick-left">运费</view>
                    <view class="pick-middle">{{orderInfo.ship?orderInfo.ship:'免运费'}}</view>
                </view>
            </view>
        </view>
    </view>
    <!-- 配送方式 -->
    <view class="attribute" style="padding-bottom:100rpx">
        <view class="attribute-wrapper">
			<view class="attribute-item">
                <view class="picker-view">
                    <view class="pick-left">订单编号</view>
                    <view class="pick-middle">{{orderInfo.order_no}}</view>
                </view>
            </view>
			<view class="attribute-item">
                <view class="picker-view">
                    <view class="pick-left">下单时间</view>
                    <view class="pick-middle">{{orderInfo.create_time}}</view>
                </view>
            </view>
			<view class="attribute-item">
                <view class="picker-view">
                    <view class="pick-left">实际支付</view>
                    <view class="pick-middle" style='font-size:20px;color:#d93838;font-weight:500'>{{orderInfo.total_price}}元</view>
                </view>
            </view>
        </view>
    </view>

    <!--结算-->
    <view class="footer-account-box order-accounts" wx:if="{{orderInfo.status==1}}">
        <view class="pay" ontap="pay">立即支付</view>
    </view>
</view>

