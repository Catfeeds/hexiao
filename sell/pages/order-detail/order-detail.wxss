/* pages/order-detail/orderDetail.wxss */
@import "../tpls/base.wxss";

.order-container {
    overflow-x: hidden;
    font-size: 28rpx;
	background: #f4f4f4;

}
.mask{
    background-color: #f4f4f4;
	margin-bottom: 100rpx;
}
.order{
	background: #fff;
}
.order-wrapper{
	margin: 0rpx 40rpx;
	padding: 40rpx 0;
	border-bottom: solid 2rpx #efefef;
}
.item-title{
	font-size: 16px;
	font-weight: 500;
	line-height: 20px;
	color: #242424
}
.item-top{
	font-size: 16px;
	font-weight: 500;
	line-height: 20px;
	color: #242424;
}
.item-bottom{
	margin-top: 20rpx;
	font-size: 16px;
	line-height: 20px;
	color: #666666;
}
.row{
	background: #fff;
}
.row-wrapper{
	margin: 0rpx 40rpx;
	padding: 40rpx 0;
	border-bottom: solid 2rpx #efefef;
	display: flex;
	flex-direction: row;
}
.row-left{
	width: 200rpx;
	font-size: 16px;
	font-weight: 500;
	line-height: 20px;
	color: #242424;
}
.row-right{
	flex: 1;
	font-size: 16px;
	line-height: 20px;
	color: #666666;
	text-align: right;
}
.qrcode{
	display: flex;
	flex-direction: row-reverse;
	padding: 0 40rpx 40rpx 40rpx;
	vertical-align: bottom;
	position: relative;
}
.qr-num{
	font-size: 18px;
	line-height: 16px;
	font-weight: 500;
	color: #ad0015;
	position: absolute;
	left: 40rpx;
	bottom: 40rpx;
}
.qr-img{
	width: 240rpx;
	height: 240rpx;
}


.footer-account-box{
    position: fixed;
    bottom: 0;
    height: 100rpx;
    width: 100%;
    display: flex;
    border-top: 1rpx solid #ccc;
}
.total-account {
    width: 270rpx;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 20px;
    color: #d93737;
    font-weight: 500;
    text-align: center
}

.pay {
    background-color: #ad0015;
    font-size: 36rpx;
    line-height: 100rpx;
    color: #fff;
    text-align: center;
    flex: 1;
}

.pay:active {
    background: darkred;
}
.pay.disabled {
    color: #fff;
    background: #4d4d4d;
}
.price{
	font-size: 20px;
	font-weight: 500;
	color: #ad0015
}
.bottom{
	margin-bottom: 100rpx;
}
.qr-code{
	margin-right: 10rpx;
}
